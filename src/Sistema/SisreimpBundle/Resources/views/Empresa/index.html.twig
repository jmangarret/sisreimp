{% extends '::base.html.twig' %}

{% block body -%}
    {{ parent() }}
    <h1>Empresa list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contribuyenteid</th>
                <th>Rif</th>
                <th>Razonsocial</th>
                <th>Tipocontribuyente</th>
                <th>Organizacioneconomica</th>
                <th>Organizacionjuridica</th>
                <th>Representantelegal</th>
                <th>Direccion</th>
                <th>Telefonos</th>
                <th>Fecharegistro</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contribuyenteId }}</td>
                <td>{{ entity.rif }}</td>
                <td>{{ entity.razonSocial }}</td>
                <td>{{ entity.tipoContribuyente }}</td>
                <td>{{ entity.organizacionEconomica }}</td>
                <td>{{ entity.organizacionJuridica }}</td>
                <td>{{ entity.representanteLegal }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefonos }}</td>
                <td>{% if entity.fechaRegistro %}{{ entity.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('empresa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('empresa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('empresa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
